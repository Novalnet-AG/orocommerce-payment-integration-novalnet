{% block _payment_methods_novalnet_credit_card_widget %}
    <div class="{{ class_prefix }}-form__payment-methods" 
    data-page-component-module="novalnet/js/app/components/creditcard-additional-fields-component"
    data-page-component-options="{{ {paymentMethod: view.options.paymentMethod}|json_encode }}">
    
    <script type="text/javascript" src={{ view.options.novalnetCheckoutJs }}></script>
    {% if view.options.displayLogo == 1 %}
        {% if view.options.enabledLogos %}
        <ul class="{{ class_prefix }}-form__payment-methods-list">
            {% for key, value in view.options.enabledLogos%}
                <li class="{{ class_prefix }}-form__payment-methods-item">
                {% set logoPath = 'bundles/novalnet/img/'~ value  ~'.png' %}
                    <img src="{{ asset(logoPath) }}" alt="{{ value }}">
                </li>
            {% endfor %}
        </ul>
        {% endif %}
    {% endif %}
        
        
        {% if view.options.testMode == 1 %}
            <div class="nn-test-mode"><span>{{ 'novalnet.payment_method_testmode'|trans}}</span></div>
        {% endif %}
        
        <div class="{{ class_prefix }}-form__payment-methods-form novalnet-credit-card-additional-fields">
            {% if view.options.maskedData %}
            {% set count  = 0 %}
            {% for key, value in view.options.maskedData %}
            {% set count  = (key + 1) %}
            <div id="credit_card_saved_card_details_{{ value.id }}">
            {{ form_row(view.options.formView.creditCardSavedCardDetails.paymentData[key]) }} &nbsp; <span class="fa-trash-o credit-card-remove-saved-card-details" data-token-id = "{{ value.id }}"></span>
            </div>
            <br>
            {% endfor %}
            
            {{ form_row(view.options.formView.creditCardSavedCardDetails.paymentData[count]) }}
            
            <br><br>
            {% endif %}
            
            <div id ="novalnet-credit-card-payment-form">
                <iframe frameBorder="0" id="novalnet_cc_iframe" width="100%" scrolling="no">
                </iframe>
                <br>
                {% if view.options.saveCardDetails %}
                {{ form_row(view.options.formView.saveCardDetails) }}
                <br>
                {% endif %}
                
                {{ form_row(view.options.formView.panhash) }}
                {{ form_row(view.options.formView.uniqueId) }}
                {{ form_row(view.options.formView.clientKey) }}
                {{ form_row(view.options.formView.doRedirect) }}
                {{ form_row(view.options.formView.customerDetails) }}
                {{ form_row(view.options.formView.labelStyle) }}
                {{ form_row(view.options.formView.inputStyle) }}
                {{ form_row(view.options.formView.containerStyle) }}
                {{ form_row(view.options.formView.inlineForm) }}
                {{ form_row(view.options.formView.enforce3d) }}
            </div>
        </div>
        <div class="nn-info-box">
           <ul>
               <li>
                    <p>
                        {{ 'novalnet.payment_method_message.credit_card'|trans }}
                    </p>
                    {% if view.options.notification %}
                        <p>{{ view.options.notification }}</p>
                    {% endif %}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

